<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Temperature_acti">

    <ImageView
        android:id="@+id/Back_btn_temperature_ac"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/Temperature_ac_img_or_icon_descriptions"
        android:onClick="click_backBtn_temperature_ac"
        android:src="@drawable/left_arrow_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Heading_temperature_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/Temperature_ac_heading_one"
        android:textColor="@color/smoke_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Reset_btn_temperature_ac"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/Temperature_ac_img_or_icon_descriptions"
        android:src="@drawable/refresh_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperature_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/Temperature_ac_text_one"
        android:textColor="@color/smoke_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading_temperature_ac" />

    <TextView
        android:id="@+id/temperature_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Temperature_ac_text_two"
        android:textColor="@color/white_shine"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/temperature_text"
        app:layout_constraintStart_toStartOf="@+id/temperature_text"
        app:layout_constraintTop_toBottomOf="@+id/temperature_text" />

    <EditText
        android:id="@+id/input_temperature"
        android:layout_width="74dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center_vertical|end"
        android:hint="@string/Temperature_ac_hint_one"
        android:inputType="numberDecimal"
        android:textColor="#F57F17"
        android:textColorHint="#F57F17"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/temperature_text_two"
        app:layout_constraintStart_toStartOf="@+id/temperature_text_two"
        app:layout_constraintTop_toBottomOf="@+id/temperature_text_two" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_one"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Heading_temperature_ac" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_two"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_one"
        app:layout_constraintStart_toEndOf="@+id/button_one" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_three"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_one"
        app:layout_constraintStart_toStartOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_four"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_three"
        app:layout_constraintStart_toEndOf="@+id/button_three" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_five"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_three"
        app:layout_constraintStart_toStartOf="@+id/button_three"
        app:layout_constraintTop_toBottomOf="@+id/button_three" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_go_btn"
        android:text="@string/Temperature_ac_Button_six"
        android:textColor="#F57F17"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_five"
        app:layout_constraintStart_toEndOf="@+id/button_five" />

    <TextView
        android:id="@+id/result_one_temperature_ac"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white_shine"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_four" />


</android.support.constraint.ConstraintLayout>